.nav{
  background-color:  #AB956D;
  padding: 20rpx;
  color: white;
  font-size: 32rpx;
}
.goods-list{
  display: flex;
  flex-direction: column;
  margin: 20rpx 20rpx 20rpx 20rpx;
  padding: 25rpx;
  background: white; 
}
.row{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: fit-content;
  justify-content: start;
  align-items: center;
}
.end-row{
  justify-content: flex-end;
}
.space-between-row{
  justify-content: space-between;
}
#nav-row{
  justify-content: space-between;
}
#info-row{
  align-items: flex-start;
}
.img{
  width: 35%;
}
.img image{
  width: 100%;
  height: 100%;
}
#info-table{
  width: 60%;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.tr{
  display: flex;
  width: 100%;
  justify-content: center;
  height: 1.5rem;
  align-items: center;

  font-size: 32rpx;
}
.td{
  width: 50%;
  justify-content: center;
  text-align: start;
}
.label{
  width: 40%;
  font-size: 32rpx;
  color: black;
}
.content{
  font-size: 32rpx;
  color: grey;
}
#add-btn{
  font-size: 32rpx;
  width: fit-content;

}
#edit-btn{
  background-color: red;
  font-size: 32rpx;
  color: white;
  width: fit-content;
}
#save-btn{
  background-color: green;
  font-size: 32rpx;
  color: white;
  width: fit-content;
}
#delete-btn{
  /* background-color: red;
  font-size: 32rpx; */
  color: white;
  height: 2rem;
  width: 2rem;
}
.hr{
  width: 100%;
  height: 4rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background-color: lightgrey;
}
#name-content-input{
 margin-top: 10rpx;
 box-shadow: 0 0 3px #000
}
.input{
  margin-top: 5rpx;
  box-shadow: 0 0 3px #000;
}