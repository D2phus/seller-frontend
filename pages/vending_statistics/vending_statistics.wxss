/* 顶部选项栏样式 */
.nav{
  background-color:  #AB956D;
}
/* 时间选择栏样式 */
.picker-text{
  font-size: 32rpx;
  color: white;
  margin-left: 20rpx;
}


/* 当日订单信息样式 */
.orders-sum-info {
  font-size: 32rpx;
  color: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  display: flex;
}
.info-item {
  margin-right: 25rpx;
}
/* 统计信息样式 */
.container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 20rpx 20rpx 30rpx;
  padding: 25rpx;
  background: white;
}
.title{
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;

  font-size: 38rpx;
  font-weight: bold;
}
.label{
  color: grey;
}
.tr{
  display: flex;
  width: 100%;
  justify-content: center;
  height: 1rem;
  align-items: center;

  font-size: 34rpx;
}
.td{
  width: 50%;
  justify-content: center;
  text-align: center;
}
.row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 500rpx;
}
ec-canvas{
  width: 100%;
  height: 100%;
}
