/* 顶部选项栏样式 */
.nav{
  background-color:  #AB956D;
}
.swiper-nav {
  width: 100%;
  height: 100rpx;
  padding: 0;
  display: flex;
}

.swiper-nav .item-nav {
  flex: 1;
  height: 95rpx;
  line-height: 110rpx;
  text-align: center;
  color: #d3bf9b;
  font-size: 32rpx;
}

/* 实现选项栏选中效果 */
.swiper-nav .active{
  color: white;
  position: relative;
}
.swiper-nav .active:after{
  content: " ";
  width: 2.2rem;
  height: 0.12rem;
  background: white;
  position: absolute;
  bottom: 0.2rem;
  left: 50%;
  transform: translateX(-50%);
}


/* 时间选择栏样式 */
.date-select{
  margin-top: 20rpx;
}
.picker-text{
  font-size: 32rpx;
  color: white;
  margin-left: 20rpx;
}


/* 当日订单信息样式 */
.orders-sum-info {
  font-size: 32rpx;
  color: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  display: flex;
}
.info-item {
  margin-right: 25rpx;
}


/* 订单详情项 */
.orders-list{
  display: flex;
  flex-direction: column;
  margin: 20rpx 20rpx 20rpx 20rpx;
  padding: 25rpx;
  background: white; 
}
.order-list-row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
#order-id{
  font-size: 32rpx;
}
#order-income{
  font-size: 32rpx;
}
#order-time{
  font-size: 30rpx;
  color: grey;
}
#order-state-normal{
  font-size: 32rpx;
  color: green;
}
#order-state-error{
  font-size: 32rpx;
  color: red;
}